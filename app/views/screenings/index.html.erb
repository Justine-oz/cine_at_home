<div class="list-films">
  <div class="container">
    <div class="card-columns">
       <% @screenings.each do |screening| %>
      <div class="card">
        <a href="#">
        <% if screening.photos.attached? %>
          <%= cl_image_tag screening.photos.first.key, class: "card-img-top" %>
        <% else %>
          <img class="card-img-top" src="https://images.unsplash.com/photo-1541415109140-571dd7c83b75?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=342&q=80" alt="Card image cap">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to screening.film, screening_path(screening), class:"card-link" %></h5>
          <p class="card-text">
            <%= screening.description %>
          </p>
          <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i><%= screening.number_of_guests %><i class="far fa-user"></i><%= screening.user.name %><i class="fas fa-calendar-alt"></i><%= screening.datetime %></small></p>
      </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
